## Definitions ##

spec:scheme
  a api:ItemEndpoint ;
  api:uriTemplate "/def/{scheme}" ;
  api:itemTemplate "http://reference.data.gov.uk/def/{scheme}" ;
  api:defaultViewer spec:schemeViewer ;
  .

spec:schemeViewer
  a api:Viewer ;
  api:name "scheme" ;
  api:properties "prefLabel,altLabel,label,note,scopeNote,topConcept.prefLabel,comment" ;
  .

spec:definition
  a api:ItemEndpoint ;
  api:uriTemplate "/def/{scheme}/{term}" ;
  api:itemTemplate "http://reference.data.gov.uk/def/{scheme}/{term}" ;
  api:defaultViewer spec:definitionViewer ;
  .

spec:definitionViewer
  a api:Viewer ;
  api:name "definition" ;
  api:properties "prefLabel,altLabel,label,note,scopeNote,topConceptOf,broader.prefLabel,narrower.prefLabel,comment,range,domain,type.label,isDefinedBy.label,subClassOf.label,subPropertyOf.label" ;
  .

spec:subclasses
  a api:ListEndpoint ;
  api:uriTemplate "/def/{scheme}/{term}/subclass" ;
  api:variable [
    api:name "superclass" ;
    api:value "http://reference.data.gov.uk/def/{scheme}/{term}" ;
    api:type rdfs:Resource ;
  ] ;
  api:selector [
    api:where " ?item rdfs:subClassOf ?superclass . " ;
  ] ;
  api:defaultViewer spec:definitionViewer ;
  .

spec:instances
  a api:ListEndpoint ;
  api:uriTemplate "/def/{scheme}/{term}/instance" ;
  api:variable [
    api:name "class" ;
    api:value "http://reference.data.gov.uk/def/{scheme}/{term}" ;
    api:type rdfs:Resource ;
  ] ;
  api:selector [
    api:where " ?item a ?class . " ;
  ] ;
  api:defaultViewer spec:viewerShort ;
  .

spec:properties
  a api:ListEndpoint ;
  api:uriTemplate "/def/{scheme}/{term}/property" ;
  api:variable [
    api:name "class" ;
    api:value "http://reference.data.gov.uk/def/{scheme}/{term}" ;
    api:type rdfs:Resource ;
  ] ;
  api:selector [
    api:where " [] a ?class ; ?item [] . " ;
  ] ;
  api:defaultViewer spec:definitionViewer ;
  .

